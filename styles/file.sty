\ProvidesPackage{styles/file}

\newcommand{\optionalinput}[1]{%
    \IfFileExists{#1}{%
        \input{#1}%
    }{}%
}

\newcommand{\IfFileNotEmpty}[2]{%
    \IfFileExists{#1}{%
        \newread\tempfile
        \openin\tempfile=#1
        \read\tempfile to \fileline
        \closein\tempfile
        \ifeof\tempfile

        \else
            #2
        \fi
    }{}%
}